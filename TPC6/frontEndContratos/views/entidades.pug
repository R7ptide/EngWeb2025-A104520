extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 Entidade: #{entidade} 
      h3 NIPC: #{nipc} 

    .w3-container
      .w3-responsive
        table.w3-table-all
          tr 
            th Id 
            th Objecto Contrato
            th Data de Celebração
            th Preço Contratual 

          - var totalPreco = 0;  
          each c in contratos 
            - totalPreco += c.precoContratual;
            tr
              td= c._id
              td= c.objectoContrato 
              td= c.dataCelebracaoContrato
              td #{c.precoContratual}€

    p Somatório do valor dos contratos: #{totalPreco}€

    footer.w3-container.w3-blue
