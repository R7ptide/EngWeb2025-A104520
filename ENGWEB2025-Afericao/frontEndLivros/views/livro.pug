extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue 
      h1= livro.title
    .w3-container
      if livro.coverImg
        img.w3-image(src=livro.coverImg, alt=livro.title)
      table.w3-table-all
        tr
          td
            Strong Id
          td= livro._id
        tr
          td 
            Strong Série
          td= livro.series || 'N/A'
        tr
          td 
            Strong Autor(es)
          td
            ul.w3-ul 
              each a in livro.author 
                li= a
        tr
          td 
            Strong Classificação
          td= livro.rating
        tr
          td 
            Strong Descrição
          td= livro.description
        tr
          td 
            Strong Língua
          td= livro.language
        tr
          td 
            Strong ISBN
          td= livro.isbn
        tr
          td 
            Strong Géneros
          td= livro.genres.join(', ')
        tr
          td 
            Strong Personagens
          td= livro.characters.join(', ')
        tr
          td 
            Strong Formato
          td= livro.bookFormat
        tr
          td 
            Strong Editora
          td= livro.publisher
        tr
          td 
            Strong Data de Publicação
          td= livro.publishDate
        tr
          td 
            Strong Primeira Data de Publicação
          td= livro.firstPublishDate
        tr
          td 
            Strong Premiações
          td= livro.awards.join(', ')
        tr
          td 
            Strong Número de Avaliações
          td= livro.numRatings
        tr
          td 
            Strong Avaliações por Estrelas
          td= livro.ratingsByStars.join(', ')
        tr
          td
            Strong Número de Páginas
          td= livro.pages
        tr
          td 
            Strong Percentagem de Gostos
          td #{livro.likedPercent}%
        tr
          td 
            Strong Configuração
          td= livro.setting.join(', ')
        tr
          td
            Strong BBE Score
          td= livro.bbeScore
        tr
          td
            Strong BBE Votes
          td= livro.bbeVotes
        tr
          td 
            Strong Preço
          td #{livro.price}€

    footer.w3-container.w3-blue
