extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue 
      h1= title 
    .w3-container
        table.w3-table-all
          tr 
            th Id 
            th Título
            th Autor
            th Data de Publicação 
            th Páginas
          each l in livros 
            tr
              td
                a(href=`/${l._id}`)= l._id.match(/^\d+/)[0]
              td= l.title 
              td
                ul.w3-ul 
                  each a in l.author 
                    li
                      a(href=`/entidades/${a}`)= a 
              td= l.publishDate
              td= l.pages

    footer.w3-container.w3-blue
