extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 Autor: #{author} 
      h3 Identificador: #{author} 

    .w3-container
      .w3-responsive
        table.w3-table-all
          tr
            th Id
            th Título
            th Data de Publicação
            th Páginas
          each l in livros
            tr
              td= l._id.match(/^\d+/)[0] 
              td= l.title
              td= l.publishDate
              td= l.pages

      p Total de livros: #{livros.length}

    footer.w3-container.w3-blue
