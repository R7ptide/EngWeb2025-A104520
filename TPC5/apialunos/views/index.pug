extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue 
      h1= tit 
      a.w3-button.w3-green(href="/alunos/new") Adicionar Aluno
    .w3-container
      table.w3-table-all
        tr 
          th Número 
          th Nome 
          th Git 
          th Ações
        each a in lalunos 
          tr
            td 
              a(href=`/alunos/${a._id}`) #{a._id}
            td= a.nome
            td= a.git 
            td
              a(href=`/alunos/edit/${a._id}`) Editar
              | /
              a(href=`/alunos/delete/${a._id}`) Remover

