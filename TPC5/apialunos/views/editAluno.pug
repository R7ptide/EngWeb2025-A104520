extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 Editar Aluno

    form.w3-container(method="POST" action=`/alunos/edit/${aluno._id}`)
      fieldset
        label.w3-text-blue Número
        input.w3-input.w3-round(type="text" name="_id" value=aluno._id disabled)

        label.w3-text-blue Nome
        input.w3-input.w3-round(type="text" name="nome" value=aluno.nome required)

        label.w3-text-blue Git
        input.w3-input.w3-round(type="text" name="gitlink" value=aluno.gitlink)

      fieldset
        label.w3-text-blue Nota do Teste
        input.w3-input.w3-round(type="text" name="teste" value=aluno.teste)

        label.w3-text-blue Nota do Trabalho
        input.w3-input.w3-round(type="text" name="pratica" value=aluno.pratica)

      fieldset
        legend.w3-text-blue TPCs:
        - var tpcs = ["tpc1", "tpc2", "tpc3", "tpc4", "tpc5", "tpc6", "tpc7", "tpc8"]
        each tpc in tpcs
          label.w3-text-blue
            input.w3-check(type="checkbox" name=tpc value="1" checked=(aluno[tpc] == '1'))
            | #{tpc.toUpperCase()}
    

      br
      button.w3-button.w3-blue(type="submit") Guardar Alterações

    footer.w3-container.w3-blue
      address Generated by EngWeb 2025 class -
        a.w3-button.w3-blue(href='/alunos') Voltar
