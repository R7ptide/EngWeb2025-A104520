extends layout

block content
  .w3-card-4
    header.w3-container.w3-green
      h1 Criar Novo Aluno

    form.w3-container(method="POST" action="/alunos/new")
      fieldset
        label.w3-text-green NÃºmero
        input.w3-input.w3-round(type="text" name="_id" required)

        label.w3-text-green Nome
        input.w3-input.w3-round(type="text" name="nome" required)

        label.w3-text-green Git
        input.w3-input.w3-round(type="text" name="gitlink")

      fieldset
        label.w3-text-green Nota do Teste
        input.w3-input.w3-round(type="text" name="teste")

        label.w3-text-green Nota do Trabalho
        input.w3-input.w3-round(type="text" name="pratica")

      fieldset
        legend.w3-text-green TPCs:
        - var tpcs = ["tpc1", "tpc2", "tpc3", "tpc4", "tpc5", "tpc6", "tpc7", "tpc8"]
        each tpc in tpcs
          label.w3-text-green
            input.w3-check(type="checkbox" name=tpc value="1")
            | #{tpc.toUpperCase()}

      br
      button.w3-button.w3-green(type="submit") Criar Aluno

    footer.w3-container.w3-green
      address Generated by EngWeb 2025 class -
        a.w3-button.w3-green(href='/alunos') Voltar
