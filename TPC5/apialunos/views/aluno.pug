extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 Detalhes do Aluno - #{aluno._id}
    .w3-container
      table.w3-table-all
        tr
          th Número
          td= aluno._id
        tr
          th Nome
          td= aluno.nome
        tr
          th Git
          td 
            if aluno.git && aluno.git !== 'undefined'
              a(href=aluno.git target="_blank") #{aluno.git}
            else
              | Não disponível
        tr 
          th Nota do Teste 
          td= aluno.teste 
        tr 
          th Nota do Trabalho 
          td= aluno.pratica
        
    .w3-container
      h2 TPCs:
      ul
        if aluno.tpc1 == '1'
          li TPC 1
        if aluno.tpc2 == '1'
          li TPC 2
        if aluno.tpc3 == '1'
          li TPC 3
        if aluno.tpc4 == '1'
          li TPC 4
        if aluno.tpc5 == '1'
          li TPC 5
        if aluno.tpc6 == '1'
          li TPC 6
        if aluno.tpc7 == '1'
          li TPC 7
        if aluno.tpc8 == '1'
          li TPC 8
    
    footer.w3-container.w3-blue
        address Generated by EngWeb 2025 class -
            a.w3-button.w3-blue(href='/alunos') Voltar
