extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue 
      h1= tit 
    .w3-container
      table.w3-table-all
        tr 
          th Ano 
          th Título 
          th Elenco 
          th Géneros 
          th Actions
        each f in lfilmes 
          tr
            td= f.year
            td= f.title 
            td 
              ul.w3-ul 
                each ator in f.cast 
                  li
                    a(href=`/actor/${ator}`)= ator 
            td 
              ul.w3-ul 
                each g in f.genres 
                  li= g 
            td
              a(href=`/filmes/edit/${f.id}`) Editar
              | /
              a(href=`/filmes/delete/${f.id}`) Remover

    footer.w3-container.w3-blue
      adress Generated by EngWeb 2025 class  