extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1= tit

    form.w3-container(method="POST")
      fieldset
        label.w3-text-blue Título
        input.w3-input.w3-round(type="text" name="title" value=filme.title required)

        label.w3-text-blue Ano
        input.w3-input.w3-round(type="number" name="year" value=filme.year required)

      fieldset
        label.w3-text-blue Atores
        each a in filme.cast
            input.w3-input.w3-round(type="text" name="cast" value=a)

      fieldset
        label.w3-text-blue Géneros
        each a in filme.genres
            input.w3-input.w3-round(type="text" name="genres" value=a)

      br
      button.w3-button.w3-blue(type="submit") Editar


    footer.w3-container.w3-blue
      adress Generated by EW2025 class - 
      a.w3-button.w3-blue(href='/filmes') Voltar