extends layout

block content
  .w3-container.w3-dark-grey.w3-padding.redondinho
    // Header do perfil
    .w3-center.w3-margin-bottom
      h1.w3-xxxlarge.w3-text-yellow üë§ Perfil de #{profileUser.username}
      if isOwnProfile
        p.w3-large.w3-text-light-grey Este √© o seu perfil p√∫blico
      else
        p.w3-large.w3-text-light-grey Perfil p√∫blico

    // Informa√ß√µes do utilizador
    .w3-card-4.w3-dark-grey.w3-margin-bottom.redondinho
      header.w3-blue.w3-padding.redondo-so-em-cima
        h2.w3-text-white üìã Informa√ß√µes P√∫blicas
      
      .w3-container.w3-padding-large
        .w3-row-padding
          .w3-half
            p.w3-text-light-grey.w3-large
              strong.w3-text-white Username: 
              span.w3-text-yellow= profileUser.username
            
            p.w3-text-light-grey.w3-large
              strong.w3-text-white Nome: 
              span.w3-text-yellow= profileUser.nome
          
          .w3-half
            p.w3-text-light-grey.w3-large
              strong.w3-text-white Tipo: 
              span(class=`w3-badge w3-round ${profileUser.tipo === 'admin' ? 'w3-orange' : 'w3-blue'}`)= profileUser.tipo === 'admin' ? 'Administrador' : 'Produtor'
                if profileUser.dataCriacao
              p.w3-text-light-grey.w3-large
                strong.w3-text-white Membro desde: 
                span.w3-text-yellow
                  script.
                    document.write(formatPortugueseDateLong('#{profileUser.dataCriacao}'));

    // Posts do utilizador
    .w3-card-4.w3-dark-grey.w3-margin-bottom.redondinho
      header.w3-blue.w3-padding.redondo-so-em-cima
        h2.w3-text-white üìù Posts
        if user && (isOwnProfile || user.tipo === 'admin')
          p.w3-text-light-grey.w3-small Todos os posts (p√∫blicos e privados)
        else
          p.w3-text-light-grey.w3-small Posts p√∫blicos de #{profileUser.nome}
      
      .w3-container.w3-padding-large
        - let showDelete = false
        - let showVisibility = false  
        - let showSIP = false
        if user && (isOwnProfile || user.tipo === 'admin')
            - showSIP = true
            - showDelete = true
            - showVisibility = true
        if userPosts && userPosts.length > 0
          each item in userPosts
            include _post.pug
        else
          .w3-panel.w3-yellow.w3-leftbar.w3-border-yellow.w3-pale-yellow
            h3.w3-text-black üì≠ Nenhum post encontrado
            if isOwnProfile
              p.w3-text-black Ainda n√£o criou posts p√∫blicos ou privados.
            else
              p.w3-text-black #{profileUser.nome} ainda n√£o tem posts p√∫blicos.

    // Bot√µes de a√ß√£o
    .w3-center.w3-margin-top
      if isOwnProfile
        a.w3-btn.w3-blue.w3-large.w3-round.w3-margin-right(href="/profile") ‚úèÔ∏è Editar Perfil
        a.w3-btn.w3-green.w3-large.w3-round(href="/sip/upload") üì§ Novo Post
      else
        a.w3-btn.w3-grey.w3-large.w3-round(href="/homepage") ‚Üê Voltar √† Homepage

  style.
    body {
      background-color: #000000 !important;
      color: #ffffff !important;
    }
    
    .redondinho {
      border-radius: 30px;
    }

    .redondo-so-em-cima {
      border-radius: 20px 20px 0 0;
    }
    
    
    .w3-container {
      min-width: 65%;
      border-radius: 30px;
      margin: 0 auto;
      padding: 20px;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #000000;
    }
    
    .w3-dark-gray {
      background-color: #000000 !important;
    }
    
    .w3-text-light-grey {
      color: #cccccc !important;
    }
    
    .w3-border-grey {
      border-color: #555 !important;
      background-color: #2a2a2a;
      border-radius: 8px;
    }
